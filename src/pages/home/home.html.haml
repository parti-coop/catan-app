%ion-header
  %ion-navbar
    %ion-title {{partiEnvironment.appTitle}}
%ion-content
  %h2 어서오세요! {{myselfData.nickname}}님
  %ion-list(text-wrap)
    %ion-list-header
      내 홈
    %ion-item{ '*ngFor': 'let post of posts' }
      .post-parti
        .parti-logo{ '[ngStyle]': "{ 'background-image': 'url(' + post.parti.logo_url + ')' }" }
        .parti-title {{ post.parti.title }}
        .parti-group{ '*ngIf': 'post.parti.group' }
          <
          {{ post.parti.group.name }}
      .post-head
        %parti-post-byline{ '[post]': 'post' }
      .post-title
        {{ post.title }}
      .post-body{ '[innerHTML]': "post.body | partiSimpleFormat " }

